{
  "name": "fastify-template-server",
  "version": "1.0.0",
  "description": "Template for spinning up a fastify server",
  "main": "dist/server.js",
  "scripts": {
    "test": "npm run clean && npm run lint && jest",
    "build": "tsc",
    "start": "NODE_ENV=prd node dist/index.js",
    "start:dev": "NODE_ENV=dev ts-node-dev index.ts --poll --respawn --transpileOnly",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "fastify",
    "nodejs",
    "server",
    "template",
    "typescript"
  ],
  "dependencies": {
    "dotenv": "8.2.0",
    "fastify": "3.7.0",
    "fastify-cors": "4.1.0",
    "fastify-custom-healthcheck": "1.1.4",
    "pino": "6.7.0",
    "pino-pretty": "4.3.0"
  },
  "devDependencies": {
    "@types/node": "14.14.6",
    "@types/pino": "6.3.3",
    "typescript": "4.0.5",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "1.0.0",
    "jest": "^26.6.0",
    "@types/jest": "^26.0.14"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/routes.ts",
      "!src/**/index.ts",
      "!src/utils/logger.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "author": "gkampitakis",
  "license": "ISC"
}
