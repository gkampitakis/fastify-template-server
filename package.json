{
  "name": "fastify-template-server",
  "version": "2.0.0",
  "description": "Template for spinning up a fastify server",
  "main": "dist/server.js",
  "scripts": {
    "test": "npm run lint && jest",
    "test:integration": "npm run lint && jest --config jest.integration.js",
    "build": "npm run clean && tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=dev ts-node-dev index.ts --poll --respawn --transpileOnly",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "format": "prettier --write '**/*.ts'"
  },
  "keywords": [
    "fastify",
    "nodejs",
    "server",
    "template",
    "typescript"
  ],
  "dependencies": {
    "close-with-grace": "^1.1.0",
    "dotenv": "^16.0.0",
    "fastify": "3.27.4",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "fastify-custom-healthcheck": "^2.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "fastify-swagger": "^5.0.0",
    "fluent-json-schema": "^3.0.1",
    "pino": "^7.0.5",
    "pino-pretty": "^7.1.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@types/pino": "7.0.4",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "prettier": "2.6.1",
    "ts-jest": "27.1.4",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "setupFiles": [
      "./src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/routes.ts",
      "!src/**/*.schema.ts",
      "!src/**/index.ts",
      "!src/utils/logger.ts",
      "!src/*.types.ts",
      "!src/*.integration.ts",
      "!src/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "author": "gkampitakis",
  "license": "MIT"
}
